{{> header}}
<div id="create-listing">
    <form action="#/car/create" method="post" id="create-listing-form">
        <div class="container">
            <h1>Create Car Listing</h1>
            <p>Please fill in this form to create an listing.</p>
            <hr>
            <p>Title</p>
            <input type="text" placeholder="Enter Title" name="title">
            <p class="text-danger validation-message" id="validate-title"></p>

            <p>Description</p>
            <input type="text" placeholder="Enter Description" name="description">
            <p class="text-danger validation-message" id="validate-description"></p>

            <p>Car Brand</p>
            <input type="text" placeholder="Enter Car Brand" name="brand">
            <p class="text-danger validation-message" id="validate-brand"></p>

            <p>Car Model</p>
            <input type="text" placeholder="Enter Car Model" name="model">
            <p class="text-danger validation-message" id="validate-model"></p>

            <p>Car Year</p>
            <input type="number" placeholder="Enter Car Year" name="year">
            <p class="text-danger validation-message" id="validate-year"></p>

            <p>Car Image</p>
            <input type="text" placeholder="Enter Car Image" name="imageUrl">
            <p class="text-danger validation-message" id="validate-imageUrl"></p>

            <p>Car Fuel Type</p>
            <input type="text" placeholder="Enter Car Fuel Type" name="fuel">
            <p class="text-danger validation-message" id="validate-fuel"></p>

            <p>Car Price</p>
            <input type="number" placeholder="Enter Car Price" name="price">
            <p class="text-danger validation-message" id="validate-price"></p>
            <hr>
            <button type="submit" class="registerbtn">Create Listing</button>
        </div>
    </form>
</div>

{{> footer}}

<script>
    $(() => formValidator.carForm('#create-listing > form'));
</script>