{{#each cars}}
<div class="my-listing">
    <p id="listing-title">{{title}}</p>
    <img src="{{imageUrl}}">

    <div class="listing-props">
        <h2>Brand: {{brand}}</h2>
        <h3>Model: {{model}}</h3>
        <h3>Year: {{year}}</h3>
        <h3>Price: {{price}}$</h3>
    </div>
    <div class="my-listing-buttons">
        <a href="#/car/details?id={{_id}}" class="my-button-list">Details</a>
        {{#if isAuthor}}
        <a href="#/car/edit?id={{_id}}" class="my-button-list">Edit</a>
        <a href="#/car/delete?id={{_id}}" class="my-button-list">Delete</a>
        {{/if}}
    </div>
</div>
{{/each}}