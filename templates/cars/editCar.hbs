{{> header}}
<div id="edit-listing">
    <form action="#/car/edit?id={{item._id}}" method="put">
        <div class="container">
            <h1>Edit Car Listing</h1>
            <p>Please fill in this form to edit an listing.</p>
            <hr>
            <p>Title</p>
            <input type="text" value="{{item.title}}" name="title">
            <p class="text-danger validation-message" id="validate-title"></p>
            <p>Description</p>
            <input type="text" value="{{item.description}}" name="description">
            <p class="text-danger validation-message" id="validate-description"></p>

            <p>Car Brand</p>
            <input type="text" value="{{item.brand}}" name="brand">
            <p class="text-danger validation-message" id="validate-brand"></p>

            <p>Car Model</p>
            <input type="text" value="{{item.model}}" name="model">
            <p class="text-danger validation-message" id="validate-model"></p>

            <p>Car Year</p>
            <input type="number" value="{{item.year}}" name="year">
            <p class="text-danger validation-message" id="validate-year"></p>

            <p>Car Image</p>
            <input type="text" value="{{item.imageUrl}}" name="imageUrl">
            <p class="text-danger validation-message" id="validate-imageUrl"></p>

            <p>Car Fuel Type</p>
            <input type="text" value="{{item.fuel}}" name="fuel">
            <p class="text-danger validation-message" id="validate-fuel"></p>

            <p>Car Price</p>
            <input type="number" value="{{item.price}}" name="price">
            <p class="text-danger validation-message" id="validate-price"></p>
            <hr>
            <button type="submit" class="registerbtn">Edit Listing</button>
        </div>
    </form>

</div>
{{> footer}}

<script>
    $(() => formValidator.carForm('#edit-listing > form'));
</script>