{{> header}}
<div id="main">
    <div id="register">
        <form action="#/register" method="post">
            <div class="container">
                <h1>Register</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>

                <p>Username</p>
                <input type="text" placeholder="Enter Username" name="username" required>
                <p class="text-danger validation-message" id="validate-username"></p>

                <p>Password</p>
                <input type="password" placeholder="Enter Password" name="password" required>
                <p class="text-danger validation-message" id="validate-password"></p>

                <p>Repeat Password</p>
                <input type="password" placeholder="Repeat Password" name="repeatPass" required>
                <p class="text-danger validation-message" id="validate-repeatPass"></p>
                <hr>

                <button type="submit" class="registerbtn">Register</button>
            </div>
            <div class="container signin">
                <p>Already have an account?
                    <a href="#/login">Sign in.</a></p>
            </div>
        </form>
    </div>
</div>
{{> footer}}
<script>
    $(() => formValidator.registerForm('#register > form'));
</script>